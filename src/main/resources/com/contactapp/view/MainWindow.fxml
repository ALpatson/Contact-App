<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.contactapp.controller.MainController"
            stylesheets="@/com/contactapp/view/styles.css">

    <!-- Top section: Title -->
    <top>
        <VBox style="-fx-padding: 10;" styleClass="header">
            <Label text="Contact Management System" 
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
            <Label text="Manage your contacts efficiently" 
                   style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
        </VBox>
    </top>

    <!-- Center section: Table and Data -->
    <center>
        <VBox style="-fx-padding: 10; -fx-spacing: 10;">
            
            <!-- Contacts Table - Simple phone app style -->
            <TableView fx:id="contactsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                
                <columns>
                    <!-- First Name Column -->
                    <TableColumn fx:id="firstNameColumn" 
                                text="First Name" 
                                prefWidth="150"/>

                    <!-- Last Name Column -->
                    <TableColumn fx:id="lastNameColumn" 
                                text="Last Name" 
                                prefWidth="150"/>

                    <!-- Phone Column -->
                    <TableColumn fx:id="phoneColumn" 
                                text="Phone Number" 
                                prefWidth="200"/>
                </columns>

            </TableView>

        </VBox>
    </center>

    <!-- Bottom section: Action Buttons -->
    <bottom>
        <VBox style="-fx-padding: 10;" styleClass="footer">
            
            <HBox spacing="10" style="-fx-padding: 10;">
                
                <!-- Add Button -->
                <Button fx:id="addButton" 
                        text="Add Contact" 
                        style="-fx-padding: 10; -fx-font-size: 12;"
                        onAction="#handleAddContact"
                        styleClass="btn-primary"/>

                <!-- View Details Button (new) -->
                <Button fx:id="viewButton" 
                        text="View Details" 
                        style="-fx-padding: 10; -fx-font-size: 12;"
                        onAction="#handleViewDetails"
                        styleClass="btn-primary"/>

                <!-- Edit Button -->
                <Button fx:id="editButton" 
                        text="Edit Contact" 
                        style="-fx-padding: 10; -fx-font-size: 12;"
                        onAction="#handleEditContact"
                        styleClass="btn-primary"/>

                <!-- Delete Button -->
                <Button fx:id="deleteButton" 
                        text="Delete Contact" 
                        style="-fx-padding: 10; -fx-font-size: 12;"
                        onAction="#handleDeleteContact"
                        styleClass="btn-danger"/>

                <!-- Refresh Button -->
                <Button fx:id="refreshButton" 
                        text="Refresh" 
                        style="-fx-padding: 10; -fx-font-size: 12;"
                        onAction="#handleRefresh"
                        styleClass="btn-secondary"/>

            </HBox>

        </VBox>
    </bottom>

</BorderPane>