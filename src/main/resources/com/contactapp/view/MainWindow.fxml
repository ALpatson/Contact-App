<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="460.0" prefWidth="650.0" stylesheets="@/com/contactapp/view/styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.contactapp.controller.MainController">

    <!-- ===== TOP HEADER  ===== -->
    <top>
        <VBox prefHeight="69.0" prefWidth="711.0" styleClass="top-container">
            <padding>
                <Insets bottom="10" left="30" right="30" top="25" />
            </padding>

            <Label styleClass="main-title" text="Contact" textFill="#eababe">
            <font>
               <Font name="System Bold" size="30.0" />
            </font></Label>
            <AnchorPane layoutX="49.0" layoutY="54.0" prefHeight="3.0" prefWidth="150.0" style="-fx-background-color: #a28089;" />
        </VBox>
    </top>

    <!-- ===== MAIN AREA ===== -->
<center>
    <HBox alignment="CENTER" prefHeight="383.0" prefWidth="711.0" spacing="20" styleClass="main-area">
        <padding>
            <Insets bottom="30" left="30" right="30" top="10" />
        </padding>
        
        <!-- LEFT : TABLE -->
        <VBox alignment="CENTER" prefWidth="380.0">
            <TableView fx:id="contactsTable" prefHeight="339.0" prefWidth="380.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                    <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                    <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone Number" />
                </columns>
            </TableView>
        </VBox>
        
        <!-- RIGHT : BUTTON PANEL -->
        <VBox alignment="CENTER" prefWidth="150.0" spacing="15">
            <Button fx:id="addButton" onAction="#handleAddContact" styleClass="btn-first" text="Add" />
            <Button fx:id="viewButton" onAction="#handleViewDetails" styleClass="btn-primary" text="View Details" />
            <Button fx:id="editButton" onAction="#handleEditContact" styleClass="btn-primary" text="Edit" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="deleteButton" onAction="#handleDeleteContact" styleClass="btn-danger" text="Delete" />
        </VBox>
    </HBox>
</center>

</BorderPane>